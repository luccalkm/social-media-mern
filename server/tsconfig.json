{
    "compilerOptions": {
        "module": "es2020",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "*.ts", "*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}