{
    "compilerOptions": {
      "module": "ESNext",  // Targets the latest ECMAScript module standard
      "target": "ES2020",  // Compile to a suitable target for modern environments
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["*.ts", "*.js", "**/*.ts"],
    "exclude": ["node_modules"]
  }
  